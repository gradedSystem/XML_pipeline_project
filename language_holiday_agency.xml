<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="scenario1.xsl"?>
<!--change the href to any of the scenario u want for example href="scenario[number of the scenario without brackets].xsl"-->
<!-- This line references an XSL file to apply a specific scenario to this XML file -->
<language_holiday_agency xmlns="urn:mycompany:language_holiday_agency" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:mycompany:language_holiday_agency language_holiday_agency.xsd">

  <!-- This section contains client information -->
  <clients>
    <!-- Each client has a name, email, and language holiday they are interested in -->
    <client>
      <name>John Doe</name>
      <email>john@example.com</email>
      <language_holiday>Spain</language_holiday>
    </client>
	<client>
      <name>Dune Boe</name>
      <email>Dune@example.com</email>
      <language_holiday>France</language_holiday>
    </client>
  </clients>
  <!-- This section contains language holiday information -->
  <language_holidays>
    <!-- Each language holiday has a destination, languages, duration, language classes, language tests, activities, and dates -->
    <language_holiday>
      <destination>Spain</destination>
      <languages>Spanish</languages>
      <duration>7</duration>
      <language_classes>Beginner Spanish</language_classes>
      <language_tests>DELE A1</language_tests>
      <activities>City tour</activities>
      <dates>
        <start_date>2023-06-01</start_date>
        <end_date>2023-06-08</end_date>
      </dates>
    </language_holiday>
	<language_holiday>
      <destination>France</destination>
      <languages>French</languages>
      <duration>5</duration>
      <language_classes>Beginner French</language_classes>
      <language_tests>French A1</language_tests>
      <activities>Museum</activities>
      <dates>
        <start_date>2022-04-07</start_date>
        <end_date>2022-04-12</end_date>
      </dates>
    </language_holiday>
  </language_holidays>
  <!-- This section contains teacher information -->
  <teachers>
    <!-- Each teacher has a name and the language they teach -->
    <teacher>
      <name>Maria Garcia</name>
      <languages>Spanish</languages>
    </teacher>
	<teacher>
      <name>Frederico Nepo</name>
      <languages>French</languages>
    </teacher>
  </teachers>
</language_holiday_agency>